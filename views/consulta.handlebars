
    <div class="container">
        <h1>Tela de Consulta</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Endereco</th>
                    <th>Bairro</th>
                    <th>Cep</th>
                    <th>cidade</th>
                    <th>estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                    {{#each post}}
                    {{#dataValues}}
                <tr>
                    <td>{{nome}}</td>
                    <td>{{endereco}}</td>
                    <td>{{bairro}}</td>
                    <td>{{cep}}</td>
                    <td>{{cidade}}</td>
                    <td>{{estado}}</td>
                    <td>
                        <button class="btn"> <a href="/editar/{{id}}">Editar</a></button>
                        <button class="btn btn-danger"> <a href="/excluir/{{id}}">Excluir</a></button>
                    </td>
                </tr>
                {{/dataValues}}
                {{/each}}
                <!-- Adicione mais linhas conforme necessário -->
            </tbody>
        </table>
    </div>